<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorWhite"
                android:id="@+id/blood_req_app">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/institute_title"
                        android:textSize="23sp"
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:text="Mobile Phone Registration"
                        android:textColor="@color/black" />
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <View
                android:id="@+id/req_view1"
                android:layout_width="match_parent"
                android:layout_below="@+id/blood_req_app"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/show_userBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show User"
                style="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center"
                android:layout_below="@+id/req_view1"
                android:padding="10dp"/>
            <ScrollView
                android:layout_below="@+id/show_userBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/regi_info_card"
                        style="@style/home_card2"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/gray"
                        app:strokeWidth="1dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.3"
                                    android:text="Mobile for: "
                                    android:gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:layout_marginStart="10dp"/>
                                <RadioGroup
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Self"
                                        android:textSize="18sp"
                                        android:id="@+id/radio_self"/>
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Other"
                                        android:layout_marginStart="20dp"
                                        android:textSize="18sp"
                                        android:id="@+id/radio_other"/>
                                </RadioGroup>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"/>
                            <LinearLayout
                                android:background="@color/gray"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <EditText
                                    android:id="@+id/regi_first_name"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/colorWhite"
                                    android:hint="First name"
                                    android:maxLines="1"
                                    android:layout_marginEnd="1dp"
                                    android:padding="10dp"/>
                                <EditText
                                    android:id="@+id/regi_last_name"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:background="@color/colorWhite"
                                    android:hint="Last name"
                                    android:padding="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"/>
                            <LinearLayout
                                android:background="@color/gray"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <TextView
                                    android:background="@color/colorWhite"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="Date of Birth"
                                    android:gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:paddingStart="10dp"
                                    android:layout_marginEnd="1dp"
                                    tools:ignore="RtlSymmetry" />
                                <EditText
                                    android:inputType="date"
                                    android:id="@+id/regi_day"
                                    android:layout_width="60dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorWhite"
                                    android:hint="DD"
                                    android:maxLength="2"
                                    android:gravity="center"/>
                                <EditText
                                    android:inputType="date"
                                    android:id="@+id/regi_month"
                                    android:layout_width="70dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorWhite"
                                    android:hint="MM"
                                    android:maxLength="2"
                                    android:gravity="center"/>
                                <EditText
                                    android:inputType="date"
                                    android:id="@+id/regi_year"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorWhite"
                                    android:hint="YYYY"
                                    android:maxLength="4"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.3"
                                    android:text="Gender: "
                                    android:gravity="center_vertical"
                                    android:textSize="18sp"
                                    android:layout_marginStart="10dp"/>
                                <RadioGroup
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Male"
                                        android:textSize="18sp"
                                        android:id="@+id/radio_male"/>
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Female"
                                        android:layout_marginStart="20dp"
                                        android:textSize="18sp"
                                        android:id="@+id/radio_female"/>
                                </RadioGroup>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <EditText
                                    android:inputType="text"
                                    android:id="@+id/regi_mobile_nameId"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/Transparent2"
                                    android:hint="Mobile Name"
                                    android:padding="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <EditText
                                    android:inputType="text"
                                    android:id="@+id/regi_mobile_model"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/Transparent2"
                                    android:hint="Mobile Model"
                                    android:padding="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <EditText
                                    android:inputType="numberDecimal"
                                    android:id="@+id/regi_imei"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/Transparent2"
                                    android:hint="IMEI"
                                    android:padding="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <EditText
                                    android:id="@+id/regi_price"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:inputType="numberDecimal"
                                    android:background="@color/Transparent2"
                                    android:hint="Price"
                                    android:padding="10dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="100dp">
                                <EditText
                                    android:id="@+id/regi_address"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/Transparent2"
                                    android:hint="Address"
                                    android:padding="10dp"/>
                            </LinearLayout>
                            <Button
                                android:id="@+id/req_submitBtn"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="Submit"
                                android:textSize="25sp"
                                android:textColor="@color/colorWhite"
                                android:background="@color/read"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
